// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SystemUser {
  id                  Int         @id @default(autoincrement())
  email               String      @unique
  password            String
  fullName            String
  userTypeId          Int         @default(1) // 1 = user, 2 = admin
  isActive            Boolean     @default(true)
  resetToken          String?
  resetTokenExpiresAt DateTime?
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  wallpapers          Wallpaper[]
  comments            Comment[]
  likes               Like[]
}

model Wallpaper {
  id           String    @id @default(uuid())
  title        String
  imageUrl     String    // S3 URL or CloudFront URL
  category     String    @default("Other") // Simple string: "Nature", "Urban", etc.
  downloadCount Int      @default(0)
  uploadedAt   DateTime  @default(now())
  uploader     SystemUser @relation(fields: [uploaderId], references: [id])
  uploaderId   Int
  tags         Tag[]     @relation("WallpaperTags")
  comments     Comment[]
  likes        Like[]
}

model Tag {
  id         String      @id @default(uuid())
  name       String      @unique
  wallpapers Wallpaper[] @relation("WallpaperTags")
}

model Comment {
  id          String     @id @default(uuid())
  content     String
  createdAt   DateTime   @default(now())
  user        SystemUser @relation(fields: [userId], references: [id])
  userId      Int
  wallpaper   Wallpaper  @relation(fields: [wallpaperId], references: [id])
  wallpaperId String
}

model Like {
  id          String     @id @default(uuid())
  createdAt   DateTime   @default(now())
  user        SystemUser @relation(fields: [userId], references: [id])
  userId      Int
  wallpaper   Wallpaper  @relation(fields: [wallpaperId], references: [id])
  wallpaperId String

  @@unique([userId, wallpaperId])
}